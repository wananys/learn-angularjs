
page{
  background-color: #f5f5fa;
}
.container{
  padding: 0;
}
.login-title{
  margin:80rpx auto 15rpx;
  font-size: 18px;
}
.login-input{
  box-sizing:border-box;
  background-color: #fff;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0rpx 250rpx 0 200rpx;
  position: relative;
}
.login-input.top-line{
  border-top:1rpx solid #f5f5fa;
}
.login-text{
  display: inline-block;
  position: absolute;
  left: 30rpx;
  top: 0;
}
.login-mobile{
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  width: 85%;
  vertical-align: middle;
}
.login-code{
  display: inline-block;
  position: absolute;
  right: 30rpx;
  top: 18rpx;
  background: #6492FF;
  border-radius: 20rpx;  
  color: #fff;
  height: 50rpx;
  padding: 0 25rpx;
  line-height: 50rpx;
  font-size: 14px;
}
.code-img{
  width: 150rpx;
  height: 60rpx;
  display: inline-block;
  position: absolute;
  right: 30rpx;
  top: 15rpx;
}
.login-tips{
  font-size: 11px;
  color: #888888;
  line-height: 100rpx;
}
.login-button{
  height: 94rpx;
  line-height: 94rpx;
  background-color: #6492FF;
  border-radius: 10px;
  display: block;
  width: 80%;
  color: #fff;
}




.modal-box{
  position:fixed;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  z-index: 99; 
  top:0;
  left:0;
}
.modal-content{
  position:absolute;
  width:80%;
  background:#fff;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  border-radius:10rpx;
  padding-top:50rpx;
  text-align: center;
}
.login-code-img{
  width:180rpx;
  height:80rpx;
  display:block;
  margin: 20rpx auto 40rpx;
  cursor: pointer;
}
.login-imgcode-input{
  display:block;
  width:80%;
  height:65rpx;
  margin:0 auto;
  border-bottom:0.5rpx solid #E5E5E5;
  text-align:left;
}
.modal-buttons{
  width: 100%;
  margin-top:30rpx;
  border-top:1rpx solid #E5E5E5;
}
.modal-buttons view{
  display:inline-block;
  width:49%;
  line-height:40px;
  text-align:center;
  cursor: pointer;
}
.modal-buttons view:first-child{
  border-right: 1rpx solid #E5E5E5;
}
.modal-confirm{
  color: #76C348;
}