/*详情*/
page{
  background-color: #f5f5fa;
  font-size: 14px;
}
.head{
  padding: 30rpx 20rpx 30rpx 150rpx;
  font-size: 14px;
  position: relative;
  height: 104rpx;
  line-height: 104rpx;
}

.logo{
  position: absolute;
  left: 20rpx;
  top: 30rpx;
  width: 104rpx;
  height: 104rpx;
  border-radius: 4px;
}
.pricebg{
  position: absolute;
  left: 20rpx;
  top: 86rpx;
  width: 104rpx;
  height: 48rpx;
}
.left-text{
  position: absolute;
  left: 20rpx;
  top: 86rpx;
  width: 104rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #fff;
  font-size: 12px;
  text-align: center;
}
.flex-wrp{
  display: flex;
  flex-direction: row;
  background: #fff;
  box-sizing:border-box;
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.flex-item{
  width: 50%;
}
.counts{
  text-align: right;
  font-size: 14px;
}
.rule-title{
  background-color: #fff;
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
  margin-top: 30rpx;
  padding: 0 20rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}
.line::after{
  content:'';
  position: absolute;
  background: #f5f5fa;
  width: 100%;
  height: 2rpx;
  bottom: 0;
  left: 20rpx;
}
.rule-content{
  max-height: 272rpx;
  padding: 26rpx 24rpx;
  background-color: #fff;
  font-size: 14px;
  color: #999999;
  line-height: 1.35;
  box-sizing: border-box;
}
.map-list{
  padding: 30rpx 20rpx;
  padding-bottom: 130rpx;
}

.btn-card{
  position: fixed;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  bottom: 0;
  text-align: center;
  background: #fff;
  font-size: 16px;
  color: #6492FF;
  box-shadow: 0 0 3px 0 #999999;
  z-index: 99;
}
.btn-card.end{
  background: #DDDDDD;
  color: #fff;
}