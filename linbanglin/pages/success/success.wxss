page{
  background: #f5f5fa;
}
.box{
  text-align: center;
  background: #fff;
  padding: 100rpx 0 50rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.logo {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 30rpx;
  border-radius: 50%;
}
.txt{
  font-size: 18px;
  margin-bottom: 50rpx;
}
.price{
  color: #fb8e00;
  font-size: 40rpx;
}
.max-txt{
  font-size: 80rpx;
}
.list{
  margin-bottom: 30rpx;
}

.item{ 
  background: #fff;
  line-height: 100rpx;
  color: #333;
  font-size: 14px;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.item:not(:first-child)::after{
  content: '';
  position: absolute;
  width: 100%;
  height: 1rpx;
  background: #E5E5E5;
  top: 0;
  left: 20rpx;
  
}
.right-price{
  color: #fb8e00;
  float: right;
}
.tips{
  text-align: center;
  color: #fb8e00;
  font-size: 12px;
  line-height: 1;
}

/** 修改button默认的点击态样式类**/
.index-buttons{
  width: 100%;
  margin:40rpx 0;
}
.index-button{
  height: 94rpx;
  line-height: 94rpx;
  background-color: #6492FF;
  border: 1rpx solid #fff;
  border-radius: 10px;
  display: block;
  width: 80%;
  color: #fff;
  margin-bottom: 24rpx;
}