page{
  background: #f5f5fa;
  box-sizing: border-box;
}
.box{
  background: #fff;
  padding: 36rpx 20rpx;
  font-size: 14px;
  color: #333;
  position: relative;
  overflow: hidden;
}
.box::after{
  content: '';
  position: absolute;
  width: 100%;
  height: 1rpx;
  background: #E5E5E5;
  bottom: 1rpx;
  left:20rpx;
}
.txt-title{
  color: #999;
  width: 180rpx;
  display: inline-block;
}
.order-detail{
  width: 200rpx;
  color: #6492FF;
  display: block;
  float: right;
  text-align: right;
  cursor: pointer;
}
.pay-type{
  font-size: 14px;
  background: #fff;
  padding: 0 20rpx;
  line-height: 76rpx;
}
.pay-counts{
  color: #FB8E00;
  display: block;
  float: right;
}
.card-content{
  padding-bottom: 36rpx;

}
checkbox-group{
  padding-bottom: 155rpx;
}
.card-list{
  margin-top: 36rpx;
  padding: 0 20rpx 0 94rpx;
  position: relative;
  height: 200rpx;
  box-sizing: border-box;
  display: block;
}

.card-checkbox{
  position: absolute;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  width: 46rpx;
}
.card-item{
  display: inline-block;
}

.order-button{
   position: fixed;
   bottom: 0;
   left:0;
   box-sizing: border-box;
   padding: 20rpx 40rpx 46rpx;
   width: 100%;
   background: #f5f5fa;
   z-index: 999;
}
.btn-card-ok{
  text-align: center;
  font-size: 18px;
  color: #fff;
  background: #6492FF;
  border-radius: 20rpx;
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
}