/**index.wxss**/
.avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 50rpx auto 0;
  border-radius: 50%;
  display: block;
}
.nickname{
  text-align: center;
  margin-bottom:50rpx;
  line-height: 2.75;
  font-size:14px;
}
/** 修改button默认的点击态样式类**/
.index-buttons{
  width: 100%;
}
.index-button{
  height: 94rpx;
  line-height: 94rpx;
  background-color: #6492FF;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
  display: block;
  width: 80%;
  color: #fff;
  margin-bottom: 24rpx;
}
.tips{
  font-size: 14px;
  color: #999999;
  text-align: center;
  line-height: 2;
}